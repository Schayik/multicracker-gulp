$flag-height = 100px
$border-height = .5 * $flag-height
$flag-height-home = 220px
$border-height-home = .5 * $flag-height-home

header
    background-image: url('../images/cracker.png')
    background-size: cover;
    background-position: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-top: 90px;
    padding-bottom: 90px;

    .spacer
        padding-bottom: 90px;
    
    .wrapper
        position: relative;
        height: $flag-height;
        display: flex;

        .flag
            background-color: $green;
            display: flex;
            align-items: center;
            padding-left: 'calc(0.5 * (100vw - %s) + %s)' % ($media.max $margin.max);

            h1
                color: $white;
                font-size: 50px;
                font-weight: bold;

        .triangle
            width: 0; 
            height: 0; 
            border-top: $border-height solid $green;
            border-left: $border-height solid $green;
            border-bottom: $border-height solid transparent; 
            border-right: $border-height solid transparent;

    &.not-home
        position: relative;

        .overlay
            position: absolute;
            background-color: $black-overlay;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

        .wrapper 
            .flag
                background-color: $green-opacity
                padding-right: 50px;

            .triangle
                border-top: $border-height solid $green-opacity;
                border-left: $border-height solid $green-opacity;
                border-bottom: $border-height solid transparent; 
                border-right: $border-height solid transparent; 

    &.home-header
        
        .wrapper
            height: $flag-height-home;

            .triangle
                border-top: $border-height-home solid $green;
                border-left: $border-height-home solid $green;
                border-bottom: $border-height-home solid transparent; 
                border-right: $border-height-home solid transparent; 

            