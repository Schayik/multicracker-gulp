footer
    position: relative;
    background-image: url('../images/cracker.png');
    background-size: cover;
    background-position: center;

    .overlay
        position: absolute;
        background-color: $black-overlay;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;

    .content
        position: relative
        z-index: 1;

        padding-top: 60px;
        padding-bottom: 60px;
        
        display: flex;
        justify-content: space-between;
        align-items: center;

        a
            position: relative
            flex: 1 1 0px;
            padding: 8px 20px 0 20px;
            height: 100px;

            display: flex;
            align-items: center;

            &:not(:first-child) 
                margin-left: 40px;

            img, .text
                position: relative;
                z-index: 1;

            img
                width: 40px;
                height: 40px;

            p
                font-size: 14px;
                margin-left: 20px;
                word-break: break-all;

            svg
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                z-index: -1;

            &:hover svg
                opacity: .9;

            &.open p
                color: $white;

                    

            


