footer
    position: relative;
    background-image: url('../images/cracker.png');
    background-size: cover;
    background-position: center;

    .overlay
        position: absolute;
        background-color: $black-overlay;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;

    .content
        position: relative
        z-index: 1;

        padding-top: 90px;
        padding-bottom: 100px;
        
        display: flex;
        justify-content: space-between;
        align-items: center;

        a
            position: relative
            flex: 1 1 0px;
            padding: 40px 40px 0 40px;
            height: 150px;

            display: flex;

            &:not(:first-child) 
                margin-left: 50px;

            img, .text
                position: relative;
                z-index: 1;

            img
                width: 60px;
                height: 60px;

            .text
                margin-left: 30px;

            .triangle
                position: absolute;
                background: linear-gradient(to bottom left, transparent 0%, transparent 49%, #fff 51%, #fff 100%);
                width: 100%;
                height: 25px;
                top: 0;
                left: 0;

            .background
                position: absolute;
                background-color: $white;
                top: 25px;
                right: 0;
                bottom: 0;
                left: 0;

            &.open
                .background
                    background-color: transparent;
                    border: 5px solid $white;
                    border-top: none;

                .triangle
                    height: 30px;
                    position: absolute;
                    background: linear-gradient(3deg, transparent 0%, transparent 45%, #fff 48%, #fff 52%, transparent 55%, transparent 100%);
                    border-left: 5px solid $white;

                svg.border
                    position: absolute;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    left: 0;

                    

            


