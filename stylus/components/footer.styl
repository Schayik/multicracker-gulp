footer
    position: relative;
    background-image: url('../images/cracker.png');
    background-size: cover;
    background-position: center;

    .overlay
        position: absolute;
        background-color: $black-overlay;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;

    .content
        position: relative
        z-index: 1;

        padding-top: 60px;
        padding-bottom: 60px;
        
        display: flex;
        justify-content: space-between;
        align-items: center;

        a
            position: relative
            flex: 1 1 0px;
            padding: 28px 20px 0 20px;
            height: 100px;

            display: flex;

            &:not(:first-child) 
                margin-left: 40px;

            img, .text
                position: relative;
                z-index: 1;

            img
                width: 40px;
                height: 40px;

            .text
                margin-left: 20px;
                word-break: break-all;
                p
                    font-size: 14px;
                .label
                    font-weight: bold;

            .triangle
                position: absolute;
                background: linear-gradient(to bottom left, transparent 0%, transparent 49%, #fff 51%, #fff 100%);
                width: 100%;
                height: 25px;
                top: 0;
                left: 0;

            .background
                position: absolute;
                background-color: $white;
                top: 25px;
                right: 0;
                bottom: 0;
                left: 0;

            &:hover
                .triangle
                    background: 'linear-gradient(to bottom left, transparent 0%, transparent 49%, %s 51%, %s 100%)' % ($white-hover $white-hover);
                .background
                    background-color: $white-hover

            &.open
                svg.border
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 100%;
                    width: 100%;
                .text p
                    color: $white;

                    

            


