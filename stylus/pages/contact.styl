.contact
    .wrapper
        display: flex;
        &:not(:first-child)
            margin-top: 3.75rem;

        img
            width: 2.5rem;
            height: 2.5rem;
        p
            margin-left: 12px;

        &.left
            margin-top: 40px;

        &.right
            align-items: center;

        &:hover
            opacity: .7;

    @media(max-width: $media.small) 
        .content
            flex-direction: column;
            margin: 0 auto;
            .column
                &:not(:first-child)
                    margin-left: 0;
                    margin-top: 3.75rem;