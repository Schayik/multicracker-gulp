.home
    flex: .3;
    display: flex;
    align-items: center;

    .content
        display: flex;
        padding-top: 90px;
        padding-bottom: 70px;

        .markdown, .button
            flex: 1 1 0px

        .markdown
            p, a
                font-size: 20px;
                line-height: 1.4;
                letter-spacing: 0.4px;
            a
                color: $green;
                text-decoration: underline;
            p:not(:first-child)
                margin-top: 28px;

        .button
            position: relative;
            margin-left: 50px;
            height: 300px;
            background-image: url('../images/cracker.png');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding-bottom: 50px;

            img, p
                position: relative;
                z-index: 1;

            img
                height: 100px;
                width: 100px;

            p
                position: relative;
                color: $white;
                font-size: 24px;
                margin-top: 20px;
                
            .overlay
                position: absolute;
                background-color: $green;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;

            .triangle
                position: absolute;
                background: linear-gradient(to bottom left, transparent 0%, transparent 49%, #fff 51%, #fff 100%);
                width: 100%;
                height: 50px;
                bottom: 0;